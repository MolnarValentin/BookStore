@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";

    bool hibas = false;

    if (HttpContext.Session.GetString("Hibas") != null && HttpContext.Session.GetString("Hibas") == "igen")
    {
        hibas = true;
        HttpContext.Session.Remove("Hibas");
    }
}

<section class="vh-100">
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-6 text-black">


        <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">

          <form method="post" style="width: 23rem;">

            <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Bejelentkezés</h3>
            @if (hibas)
            {
                <div class="form-outline mb-4">
                  <div class="bg-danger text-white rounded ps-1">Hibás jelszó vagy felhasználónév</div>
                </div>
            }
            
            <div class="form-outline mb-4">
              <span asp-validation-for="Felhasználónév" class="text-danger"></span>
              <input asp-for="Felhasználónév" type="text" id="form2Example18" class="form-control form-control-lg" />
              <label class="form-label" for="form2Example18">Felhasználónév</label>
            </div>

            <div class="form-outline mb-4">
              <span asp-validation-for="Jelszó" class="text-danger"></span>
              <input asp-for="Jelszó" type="password" id="form2Example28" class="form-control form-control-lg" />
              <label class="form-label" for="form2Example28">Jelszó</label>
            </div>

            <div class="pt-1 mb-4">
              <button class="btn btn-info btn-lg btn-block" type="submit">Bejelentkezés</button>
            </div>

            <p>Nincs még fiókja? <a asp-page="/Regisztráció" class="link-info">Regisztráció</a></p>

          </form>

        </div>

      </div>
      <div class="col-sm-6 px-0 d-none d-sm-block">
        <img src="Képek/Bejelentkezes.jpg"
          alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
      </div>
    </div>
  </div>
</section>
