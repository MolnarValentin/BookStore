@page
@model KönyvtárAlkalmazás.Pages.AdminPages.KönyvVisszahozvaModel
@{
}

<div class="h-100 d-flex align-items-center justify-content-center"><h1>Könyv Visszahozva</h1></div>


<form method="post">
    @if (Model.ValidFelhasználónév == false)
    {
                <div class="form-outline mb-4">
                    <div class="bg-danger text-white rounded ps-1">Nincs ilyen felhasználó</div>
                </div>
    }
   <div class="form-outline mb-4">
    <span asp-validation-for="Felahsználónév" class="text-danger"></span>
    <input asp-for="Felahsználónév" type="string" id="form5Example1" class="form-control" />
    <label class="form-label" for="form5Example1">Felhasználónév</label>
  </div>

    @if (Model.ValidISBN == false)
    {
                <div class="form-outline mb-4">
                    <div class="bg-danger text-white rounded ps-1">Nincs ilyen ISBN számú könyv az adatbázisban</div>
                </div>
    }
    @if (Model.MégNemKölcsönöztékKi)
    {
                 <div class="form-outline mb-4">
                     <div class="bg-danger text-white rounded ps-1">Ezt a könyvet még nem kölcsönözték ki</div>
                 </div>
    }
    @if (Model.FelhasznaloNemKolcsonozte)
    {
                     <div class="form-outline mb-4">
                         <div class="bg-danger text-white rounded ps-1">Felhasználónak nincs ilyen kölcsönzése</div>
                     </div>
    }
  <div class="form-outline mb-4">
    <span asp-validation-for="ISBN" class="text-danger"></span>
    <input asp-for="ISBN" type="number" id="form5Example2" class="form-control" />
    <label class="form-label" for="form5Example2">ISBN</label>
  </div>

  <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
     <button type="submit" class="btn btn-info btn-lg">Hozzáad</button>
  </div>
</form>